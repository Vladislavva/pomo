{{#if remove}}
<div class="task__modal" id="open-reset-modal">
    <div class="task__modal-item">
        <div class="modal-nav">
            <button class="icon-close close" title="close window"></button>
        </div>
        <div class="modal__title">
            <h2>remove task</h2>
